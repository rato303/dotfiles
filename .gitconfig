# Git 設定
# このファイルは ~/.gitconfig から読み込まれます

[alias]
	# 基本コマンド
	s = status
	a = add
	c = commit
	pp = pull --prune

	# ログ表示
	l = log --oneline --graph --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

	# ブランチ操作
	b = branch
	co = checkout
	cob = checkout -b

	# 差分表示
	d = diff
	ds = diff --staged

	# その他
	unstage = reset HEAD --
	last = log -1 HEAD
	amend = commit --amend
	undo = reset --soft HEAD^

[color]
	# カラー出力を有効化
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	# エディタ設定
	editor = vim

	# 改行コード自動変換を無効化
	autocrlf = input

[pull]
	# pull 時のデフォルト動作
	rebase = false

[init]
	# デフォルトブランチ名
	defaultBranch = main

# ユーザー情報は ~/.gitconfig で管理する
# [user]
#     name = Your Name
#     email = your.email@example.com
